{
    "compilerOptions": {
      "target": "es2017",
      "module": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,  
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "strict": true,
      "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*.ts"]
  }
  